bind -f common  > player-next
bind -f common  < player-prev
bind -f common  p player-pause
bind -f common  P player-play
bind -f common  s player-stop
bind -f common  r refresh
bind -f common  H seek -1M
bind -f common  L seek +1M
bind -f common  + vol +5%
bind -f common  = vol -5%

#Reshuffle playlist when end of shuffle list is reached.
set auto_reshuffle=true

#If enabled, always select the currently playing track on track
#change.
set follow=true

set color_titleline_bg=black
set color_titleline_fg=green

set color_cmdline_bg=black
set color_cmdline_fg=gray
set color_separator=white
set color_statusline_bg=black
set color_statusline_fg=lightcyan
set color_titleline_bg=black
set color_titleline_fg=yellow
set color_win_bg=black
set color_win_cur=white
set color_win_cur_sel_bg=black
set color_win_fg=white

set color_win_sel_bg=green
set color_win_sel_fg=black
set color_win_title_bg=black
set color_win_title_fg=white
